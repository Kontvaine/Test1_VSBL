mixin services(link, title, intro)
	.container
		.row
			.col-sm-12
				a.a--services__row.flex(href='#{link}')
					.services__row__content
						h3 #{title}
						p #{intro}
					.services-arrow 
						img(src='../assets/images/arrow.png', alt='arrow')
						

mixin project(projectTitle, logoSrc, projectIntro)
	.col-md-6
		.col-md-12.project__box
			.name-logo.flex
				h2.h2--projects #{projectTitle}
				img(src='#{logoSrc}', alt='logo project')
			p.p--publications #{projectIntro}
			a.a--btn-project(href="#") peržiūrėti projektą	

